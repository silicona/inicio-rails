<% provide(:titulo, @titulo) %>
<div class="row">
	<aside class="col-md-4">
		<section class="info_usuario">
			<%= gravatarPara @usuario %>
			<h1><%= @usuario.nombre %></h1>
			<span><%= link_to "Ver mi perfil", @usuario %></span>
			<span><b>Microentradas:</b> <%= @usuario.microentradas.count %></span>
		</section>
		<section class="estadisticas">
			<%= render 'compartido/estadisticas' %>
			<% if @avatares.any? %>
				<div class="avatares">
					<% @avatares.each do |usuario| %>
						<%= enlace_a gravatarPara(usuario, medida: 30), usuario %>
					<% end %>
				</div>
			<% end %>
		</section>
	</aside>
	<div class="col-md-8">
		<h3><%= @titulo %></h3>
		<% if @usuarios.any? %>
			<ul class="usuarios seguir">
				<%= render @usuarios %>
			</ul>
			<%= will_paginate %>
		<% end %>
	</div>
</div>