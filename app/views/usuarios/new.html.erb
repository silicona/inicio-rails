<% provide(:titulo, 'Registro') %>
<h1>Registro de Usuario</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@usuario, url: registro_path) do |f| %>
			<%= render 'compartido/mensaje_error' %>
			<%= f.label :nombre %>
			<%= f.text_field :nombre, class: 'form-control' %>
			
			<%= f.label :email %>
			<%= f.email_field :email, class: 'form-control' %>
			
			<%= f.label :password %>
			<%= f.password_field :password, class: 'form-control' %>
			
			<%= f.label :password_confirmation, "ConfirmaciÃ³n" %>
			<%= f.password_field :password_confirmation, class: 'form-control' %>

			<%= f.submit "Crear mi cuenta", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>