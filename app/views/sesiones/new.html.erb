<% provide(:titulo, "Acceder") %>

<h1>Acceder</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(:sesiones, url: acceder_path) do |f| %>
			<%= f.label :email %>
			<%= f.email_field :email, class: 'form-control' %>

			<%= f.label :password %>
			<%= link_to "(¿Olvidaste la contraseña?)", new_reseteo_password_path %>
			<%= f.password_field :password, class: 'form-control' %>

			<%= f.label :recuerda_me, class: "checkbox inline" do %>
				<%= f.check_box :recuerda_me %>
				<span>Recuérdame en este dispositivo</span>
			<% end %>

			<%= f.submit "Acceder", class: "btn btn-primary" %>
		<% end %>

		<p>¿Nuevo usuario? <%= link_to "¡Registrate ahora!", registro_path %></p>
	</div>
</div>